<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableColumn?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>



<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trapx00.lightx00.client.presentation.notificationui.NotificationUiController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <JFXTreeTableView fx:id="notificationTable" prefHeight="500.0" prefWidth="500.0">
        <columns>
            <JFXTreeTableColumn fx:id="tableDateColumn" prefWidth="150" text="日期" />
            <JFXTreeTableColumn fx:id="tableIdColumn" editable="false" prefWidth="150" resizable="false" text="消息" />
            <JFXTreeTableColumn fx:id="tableTypeColumn" prefWidth="150" text="状态" />
            <JFXTreeTableColumn fx:id="tableReadColumn" prefWidth="150" text="已读" />
        </columns>
    </JFXTreeTableView>
    <HBox alignment="CENTER_LEFT" maxHeight="60.0" maxWidth="2000.0" prefHeight="60.0" prefWidth="600.0">
        <padding>
            <Insets bottom="10" right="20" top="10" />
        </padding>
        <JFXButton fx:id="selectAllButton" buttonType="RAISED" onAction="#onRefreshButtonClicked" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF" text="更新">
            <graphic>
                <MaterialIconView glyphName="REFRESH" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="deleteButton" buttonType="RAISED" onAction="#onDeleteButtonClicked" style="-fx-background-color: #bf360c; -fx-text-fill: #FFFFFF" text="删除">
            <graphic>
                <MaterialIconView glyphName="DELETE" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="readButton" buttonType="RAISED" onAction="#onReadButtonClicked" style="-fx-background-color: #232e5f; -fx-text-fill: #FFFFFF" text="阅读">
            <graphic>
                <MaterialIconView glyphName="ARROW_FORWARD" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </JFXButton>
    </HBox>
</VBox>







