<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.materialicons.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="dialogContainer" prefHeight="500.0" prefWidth="360.0"
           styleClass="exteriorLine, loginBackground" stylesheets="@../helpui/main.css" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="trapx00.lightx00.client.presentation.loginui.LoginUiController">
    <BorderPane fx:id="rootPane" prefHeight="396.0" prefWidth="356.0" >
        <BorderPane.margin>
            <Insets bottom="10.0" right="20.0" top="10.0"/>
        </BorderPane.margin>
        <top>
            <VBox alignment="CENTER" prefHeight="60.0" prefWidth="300.0">
                <Label text="Light x00" textFill="#000000">
                    <font>
                        <Font name="System Bold" size="42.0"/>
                    </font>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
                <Label text="进销存管理系统" textFill="#000000">
                    <VBox.margin>
                        <Insets left="120.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <BorderPane.margin>
                    <Insets/>
                </BorderPane.margin>
                <padding>
                    <Insets bottom="20.0"/>
                </padding>
            </VBox>
        </top>
        <center>
            <VBox alignment="CENTER" prefHeight="80.0" spacing="40.0" prefWidth="340">
                <HBox alignment="CENTER" spacing="10.0">
                    <MaterialIconView fill="#000000" glyphName="PERSON" glyphSize="32"/>
                    <JFXTextField fx:id="usernameField" labelFloat="true" prefHeight="32" prefWidth="300" promptText="用户名"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <MaterialIconView fill="#000000" glyphName="SECURITY" glyphSize="32"/>
                    <JFXPasswordField fx:id="passwordField" labelFloat="true" prefHeight="32" prefWidth="300" promptText="密码"/>
                </HBox>

            </VBox>
        </center>
        <bottom>
            <VBox alignment="TOP_CENTER"  spacing="20.0" prefWidth="340">
                <JFXButton fx:id="loginButton" buttonType="RAISED" onAction="#onLoginButtonClicked" prefHeight="32.0"
                           prefWidth="340"
                           style="-fx-background-color: #3F51B5; -fx-text-fill: #FFFFFF;" text="登 录">
                    <graphic>
                        <MaterialIconView glyphName="CHECK" glyphSize="24" fill="#FFFFFF"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnFaceId" buttonType="RAISED" onAction="#onBtnFaceIdClicked" prefHeight="32.0"
                           prefWidth="340"
                           style="-fx-background-color: #f57f17; -fx-text-fill: #FFFFFF;" text="Face ID">
                    <graphic>
                        <MaterialIconView glyphName="FACE" glyphSize="24" fill="#FFFFFF"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="cancelButton" buttonType="RAISED" prefHeight="32.0"
                           prefWidth="340"
                           onAction="#onBtnCancelClicked"
                           style="-fx-background-color: #E8EAF6; -fx-text-fill: #000000;" text="退 出">
                    <graphic>
                        <MaterialIconView glyphName="EXIT_TO_APP" glyphSize="24" fill="#000000"/>
                    </graphic>
                </JFXButton>
                <BorderPane.margin>
                    <Insets top="20.0"/>
                </BorderPane.margin>
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </VBox>
        </bottom>
        <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </StackPane.margin>
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </padding>
    </BorderPane>
</StackPane>
