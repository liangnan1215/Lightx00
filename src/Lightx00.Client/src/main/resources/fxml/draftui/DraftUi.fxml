<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableColumn?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trapx00.lightx00.client.presentation.draftui.DraftUiController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <JFXTreeTableView fx:id="draftTable" prefHeight="500.0" prefWidth="500.0">
       <columns>
           <JFXTreeTableColumn fx:id="tableDateColumn" prefWidth="150" text="日期" />
           <JFXTreeTableColumn fx:id="tableIdColumn" editable="false" prefWidth="150" resizable="false" text="单据ID" />
           <JFXTreeTableColumn fx:id="tableTypeColumn" prefWidth="150" text="单据类型" />
       </columns>
   </JFXTreeTableView>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <JFXButton fx:id="selectAllButton" onAction="#onRefreshButtonClicked" text="更新">
            <graphic>
                <MaterialIconView glyphName="REFRESH" glyphSize="24" />
            </graphic>
        </JFXButton>
        <JFXButton fx:id="deleteButton" onAction="#onDeleteButtonClicked" text="删除">
            <graphic>
                <MaterialIconView glyphName="DELETE" glyphSize="24" />
            </graphic>
        </JFXButton>
        <JFXButton fx:id="continueWriteButton" onAction="#onContinueWriteButtonClicked" text="继续填写">
            <graphic>
                <MaterialIconView glyphName="ARROW_FORWARD" glyphSize="24" />
            </graphic>
        </JFXButton>
    </HBox>
</VBox>
