<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trapx00.lightx00.client.presentation.promotionui.PromotionManagementUiController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox alignment="CENTER_LEFT" maxWidth="2000">
        <FontAwesomeIconView fill="black" glyphName="WPFORMS" glyphSize="22" />
        <Text text="促销策略管理">
            <font>
                <Font size="20.0" />
            </font></Text>
        <padding>
            <Insets right="10.0" />
        </padding>
    </HBox>

    <JFXMasonryPane prefHeight="200.0" prefWidth="780.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label alignment="CENTER" maxHeight="30" text="输入编号" />
        <StackPane alignment="CENTER_LEFT" maxHeight="30">
            <JFXTextField fx:id="tfSearch" maxWidth="150.0" prefWidth="100.0" />
        </StackPane>
        <StackPane alignment="CENTER_LEFT" maxHeight="30">
            <JFXButton fx:id="btnSearch" buttonType="RAISED" onAction="#onBtnSearchClicked" prefHeight="18" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF" text="查找">
                <graphic>
                    <FontAwesomeIconView glyphName="SEARCH" glyphSize="18" glyphStyle="-fx-fill: #FFFFFF" />
                </graphic>
            </JFXButton>
        </StackPane>
    </JFXMasonryPane>
    <HBox alignment="CENTER_LEFT" maxWidth="2000">
        <FontAwesomeIconView glyphName="TH_LIST" glyphSize="22" />
        <Text text="已有促销策略信息">
            <font>
                <Font size="20.0" />
            </font></Text>
        <padding>
            <Insets right="10.0" />
        </padding>
    </HBox>
    <JFXTreeTableView fx:id="tablePromotion" prefHeight="500.0" prefWidth="500.0">
        <columns>
            <JFXTreeTableColumn fx:id="tcId" prefWidth="150" text="编号" />
            <JFXTreeTableColumn fx:id="tcType" prefWidth="150" text="促销类型" />
            <JFXTreeTableColumn fx:id="tcStartDate" editable="false" prefWidth="150" text="开始时间" />
            <JFXTreeTableColumn fx:id="tcEndDate" prefWidth="150" text="结束时间" />
        </columns>
    </JFXTreeTableView>
    <HBox alignment="CENTER_LEFT" maxHeight="60.0" maxWidth="2000.0" prefHeight="60.0" prefWidth="600.0">
        <padding>
            <Insets bottom="10" right="20" top="10" />
        </padding>

        <JFXButton fx:id="btnDelete" buttonType="RAISED" onAction="#onBtnDeleteClicked" style="-fx-background-color: #bf360c; -fx-text-fill: #FFFFFF" text="删除">
            <graphic>
                <MaterialIconView glyphName="DELETE" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </JFXButton>
    </HBox>

</VBox>
