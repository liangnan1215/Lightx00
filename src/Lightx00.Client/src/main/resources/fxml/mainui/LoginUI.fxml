                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <MaterialIconView glyphName="SECURITY" glyphSize="24" />
                        <JFXTextField labelFloat="true" promptText="密码" />
                    </HBox>

                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="50.0" spacing="50.0">
                    <JFXButton fx:id="loginButton" buttonType="RAISED" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #C5CAE9" text="登录" />
                    <JFXButton buttonType="RAISED" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #C5CAE9" text="取消" />
                </HBox>
            </bottom>
        </BorderPane>
    </right>
