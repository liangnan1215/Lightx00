<StackPane prefHeight="360.0" prefWidth="630.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:id="dialogContainer" fx:controller="trapx00.lightx00.client.presentation.mainui.LoginUiController">
<JFXDialog fx:id="dialog"/>
<BorderPane prefHeight="360.0" prefWidth="630.0" >
    <left>
        <Pane prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <ImageView fitHeight="300.0" fitWidth="300.0">
                <BorderPane.margin>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                </BorderPane.margin>
                <image>
                    <Image url="@../../img/placeholder.jpg" />
                </image>
            </ImageView>
            <BorderPane.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </BorderPane.margin>
        </Pane>

    </left>
    <right>
        <BorderPane>
            <BorderPane.margin>
                <Insets bottom="30.0" right="20.0" top="30.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <top>
                <VBox alignment="CENTER" prefHeight="100" prefWidth="300.0" spacing="5.0">
                    <Label text="Light x00">
                        <font>
                            <Font size="32.0" />
                        </font>
                        <VBox.margin>
                            <Insets right="30.0" />
                        </VBox.margin>
                    </Label>
                    <Label text="进销存管理系统">
                        <VBox.margin>
                            <Insets left="100.0" />
                        </VBox.margin>
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </VBox>
            </top>
            <center>
                <VBox alignment="CENTER" prefHeight="150" spacing="30.0">
                    <HBox alignment="CENTER" spacing="10.0">
                        <MaterialIconView glyphName="PERSON" glyphSize="24" />
