<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableColumn?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trapx00.lightx00.client.presentation.clientui.ClientUiController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="选择一个客户" textFill="#5e5e5e">
        <font>
            <Font name="System Bold" size="32.0" />
        </font>
    </Label>
    <JFXTreeTableView fx:id="clientTable" prefHeight="500.0" prefWidth="750.0">
        <columns>
            <JFXTreeTableColumn fx:id="clientIdColumn" editable="false" prefWidth="150" text="编号" />
            <JFXTreeTableColumn fx:id="clientNameColumn" editable="false" prefWidth="150" text="姓名" />
            <JFXTreeTableColumn fx:id="clientTypeColumn" editable="false" prefWidth="150" text="分类" />
            <JFXTreeTableColumn fx:id="clientLevelColumn" editable="false" prefWidth="150" text="级别" />
            <JFXTreeTableColumn fx:id="clientPhoneColumn" editable="false" prefWidth="150" text="电话" />
        </columns>
    </JFXTreeTableView>
    <HBox alignment="CENTER" prefHeight="40.0" spacing="40.0">
        <JFXButton fx:id="btnSelect" buttonType="RAISED" onAction="#onBtnSelectClicked" prefHeight="32.0"
                   prefWidth="80.0" style="-fx-background-color: #3F51B5; -fx-text-fill: #FFFFFF;" text="选择">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="btnClose" buttonType="RAISED" onAction="#onBtnCloseClicked" prefHeight="32.0" prefWidth="80.0"
                   style="-fx-background-color: #E8EAF6; -fx-text-fill: #000000;" text="取消"/>
        <padding>
            <Insets top="10.0"/>
        </padding>
    </HBox>
</VBox>
