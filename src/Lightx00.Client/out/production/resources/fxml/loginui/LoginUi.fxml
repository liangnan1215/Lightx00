<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="dialogContainer" stylesheets="@../helpui/main.css" styleClass="exteriorLine" prefHeight="360.0" prefWidth="360.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trapx00.lightx00.client.presentation.loginui.LoginUiController">
        <BorderPane fx:id="rootPane" prefHeight="360" prefWidth="360" style="-fx-background-color: #ffffff">
            <BorderPane.margin>
                <Insets bottom="30.0" right="20.0" top="30.0" />
            </BorderPane.margin>
            <top>
                <VBox alignment="CENTER" prefHeight="100" prefWidth="300.0" spacing="5.0">
                    <Label text="Light x00">
                        <font>
                            <Font size="32.0" />
                        </font>
                        <VBox.margin>
                            <Insets right="30.0" />
                        </VBox.margin>
                    </Label>
                    <Label text="进销存管理系统">
                        <VBox.margin>
                            <Insets left="100.0" />
                        </VBox.margin>
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </VBox>
            </top>
            <center>
                <VBox alignment="CENTER" prefHeight="120" spacing="30.0">
                    <HBox alignment="CENTER" spacing="10.0">
                        <MaterialIconView glyphName="PERSON" glyphSize="32" />
                        <JFXTextField fx:id="usernameField" labelFloat="true" prefHeight="32" promptText="用户名" />
                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <MaterialIconView glyphName="SECURITY" glyphSize="24" />
                        <JFXTextField fx:id="passwordField" labelFloat="true" prefHeight="32" promptText="密码" />
                    </HBox>

                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="50.0" spacing="50.0">
                    <JFXButton fx:id="loginButton" buttonType="RAISED" onAction="#onLoginButtonClicked" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #1A217E; -fx-text-fill: #FFFFFF" text="登录" />
                    <JFXButton fx:id="cancelButton" buttonType="RAISED" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF" text="取消" />
                </HBox>
            </bottom>
      <StackPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </StackPane.margin>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
        </BorderPane>
</StackPane>
